pilha = []

def menu(): 
    while True:
        opcao = input('''
    ----Menu----
    1 - Inserir link na lista
    2 - Remover link da lista
    3 - Visualizar links salvos
    0 - Fechar programa
    Escolha: ''')
        if opcao == '0':
            exit()
        elif opcao == '1':
            a = input("Digite link: ")
            pilha.append(a)
            for b, word in enumerate(pilha, start=1):
                    print(b, word)
        elif opcao == '2':
            if len(pilha) > 0:
                pilha.pop()
                for b, word in enumerate(pilha, start=1):
                    print(b, word)
            else:
                print("Ainda não há nada na pilha")
        elif opcao == '3':
            if len(pilha) == 0:
                print("Ainda não há nada na pilha")
            else:
                for b, word in enumerate(pilha, start=1):
                    print(b, word)
        else: input("Erro. Escolha o índice de alguma ação. [ENTER]")

menu()
